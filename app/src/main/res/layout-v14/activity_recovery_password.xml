<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#11E3D9"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_margin="12dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/logo_blue" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/white"
       android:layout_gravity="center"
        android:textSize="14dp"
        android:background="@color/fbutton_color_alizarin"
        android:text="Select your security question and give the correct answer to recover" />

    <Spinner
        android:id="@+id/questionsSpinner"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:layout_margin="12dp" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:hint="Enter your answer here" />


    <org.twinone.Custom.FlatButton
        android:id="@+id/confirmButton"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_margin="32dp"
        android:text="RECOVER"
        android:textSize="20dp"
        android:textColor="@color/white"
        app:buttonColor="@color/fbutton_color_emerald"
        app:cornerRadius="5dp"
        app:shadowEnabled="true"
        app:shadowHeight="4dp" />


</LinearLayout>
