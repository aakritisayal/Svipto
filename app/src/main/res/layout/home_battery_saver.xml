<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:weightSum="1">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/background_1">


            <LinearLayout
                android:id="@+id/idHead"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <RelativeLayout
                    android:id="@+id/back"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:src="@drawable/arrow" />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:text="BATTERY SAVER"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                    android:textStyle="normal" />

            </LinearLayout>

            <ImageView
                android:id="@+id/battery"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="10dp"
                android:src="@drawable/top_icon" />

            <TextView
                android:id="@+id/drainingfast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/battery"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/draining_fast"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/Optimize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/drainingfast"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="normal" />

        </RelativeLayout>

        <!--<ScrollView-->


        <!--android:layout_width="wrap_content"-->


        <!--android:layout_height="match_parent">-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:id="@+id/listItems1"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <ToggleButton
                            android:id="@+id/idToggle1"
                            android:layout_width="15dp"
                            android:layout_height="10dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/toggle_button"
                            android:checked="false"
                            android:clickable="false"
                            android:gravity="center|right"
                            android:padding="10dp"
                            android:textOff=""
                            android:textOn="" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center_vertical"
                                android:paddingRight="40dp"
                                android:text="Hibernate apps to save battery"
                                android:textColor="#524445"
                                android:textSize="18sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/txtHybernateApps"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_below="@+id/idToggle1"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="sans-serif"
                                android:gravity="center_vertical"
                                android:paddingRight="40dp"
                                android:text=""
                                android:textColor="#524445"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:background="#372B28" />


                    <LinearLayout
                        android:id="@+id/linearGrid1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <GridView
                            android:id="@+id/PhoneImageGrid"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:columnWidth="90dp"
                            android:gravity="center"
                            android:horizontalSpacing="10dp"
                            android:numColumns="auto_fit"
                            android:outlineProvider="background"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="10dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:background="#372B28" />

                    <RelativeLayout
                        android:id="@+id/listItems2"
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <ToggleButton
                            android:id="@+id/idToggle2"
                            android:layout_width="15dp"
                            android:layout_height="10dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="15dp"
                            android:background="@drawable/toggle_button"
                            android:checked="false"
                            android:clickable="false"
                            android:gravity="center|right"
                            android:padding="10dp"
                            android:textOff=""
                            android:textOn="" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="center_vertical"
                                android:paddingRight="40dp"
                                android:text="Recommended to keep awake"
                                android:textColor="#524445"
                                android:textSize="18sp"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/txtrecomnd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:layout_below="@+id/idToggle1"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="sans-serif"
                                android:gravity="center_vertical"
                                android:paddingRight="40dp"
                                android:text=""
                                android:textColor="#524445"
                                android:textSize="15sp"
                                android:textStyle="normal" />

                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:background="#372B28" />

                    <LinearLayout
                        android:id="@+id/linearGrid2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <GridView
                            android:id="@+id/PhoneImageGrid2"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:columnWidth="90dp"
                            android:gravity="center"
                            android:horizontalSpacing="10dp"
                            android:numColumns="auto_fit"
                            android:outlineProvider="background"
                            android:stretchMode="columnWidth"
                            android:verticalSpacing="10dp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.7dp"
                        android:background="#372B28" />

                </LinearLayout>

            </ScrollView>


        </LinearLayout>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_optimize"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="#0E918B"
            android:fontFamily="sans-serif-medium"
            android:text="OPTIMIZE"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="normal" />

    </RelativeLayout>

</RelativeLayout>