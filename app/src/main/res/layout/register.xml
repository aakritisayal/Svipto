<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/background_3"
            android:layout_height="80dp">


            <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/back"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/arrow"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="SIGN UP"
                android:textColor="#ffffff"
                android:textSize="25sp"
                android:textStyle="normal"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/back"
                android:layout_marginLeft="5dp"
                android:layout_toEndOf="@+id/back"
                android:id="@+id/textView5" />


                <TextView
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center_vertical"
                    android:text="Log In"
                    android:textColor="#ffffff"
                    android:layout_marginRight="10dp"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />




        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/round_backround"
            android:orientation="horizontal"
            android:layout_height="42dp"
            android:id="@+id/id_battery_saver">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gift"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="Sign up to get 2GB free Cloud Space"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="normal"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/round_backround"
            android:orientation="horizontal"
            android:layout_height="42dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:id="@+id/cpu_cooler">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mail"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="normal"
                android:hint="Email"
                android:paddingRight="10dp"
                android:inputType="textEmailAddress"
                android:singleLine="true"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:id="@+id/edtEmail" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/round_backround"
            android:orientation="horizontal"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/password"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="normal"
                android:hint="Password"
                android:singleLine="true"
                android:inputType="textPassword"
                android:paddingRight="10dp"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:id="@+id/edtPassword" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_vertical"
            android:background="@drawable/round_backround"
            android:orientation="horizontal"
            android:layout_height="42dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/password"
                android:gravity="center_vertical"
                android:layout_marginLeft="30dp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="normal"
                android:hint="Re-Enter Password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:paddingRight="10dp"
                android:background="@android:color/transparent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:id="@+id/edtReEntrPass" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:text="SIGN UP"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:textStyle="normal"
            android:background="#0E918B"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />



        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="I agree to the "
                android:textSize="14sp"
                android:textStyle="normal"
                android:textColor="#000000"
                android:layout_centerVertical="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="Terms of Use "
                android:textSize="14sp"
                android:textStyle="normal"
                android:textColor="#0E918B"
                android:layout_centerVertical="true" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="and "
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="normal"
                android:layout_centerVertical="true" />
            <TextView
                android:id="@+id/txt_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center_vertical"
                android:text="Privacy Policy"
                android:textSize="14sp"
                android:textColor="#0E918B"
                android:textStyle="normal"
                android:layout_centerVertical="true" />

        </LinearLayout>






    </LinearLayout>
</ScrollView>
