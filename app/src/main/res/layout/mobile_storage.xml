<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33446A"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/background_3">

        <RelativeLayout

            android:id="@+id/relativeLayout5"
            android:layout_width="50dp"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/back"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:src="@drawable/arrow" />

        </RelativeLayout>


        <TextView
            android:id="@+id/txt_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/relativeLayout5"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:text="Other Files"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:textStyle="normal" />

        <RelativeLayout

            android:id="@+id/relativeUp"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true">


            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:src="@drawable/ic_navigate_up" />

        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/relativeUpvIDEOS"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:visibility="gone">


            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:src="@drawable/arow_up" />

        </RelativeLayout>


    </RelativeLayout>



    <fragment android:id="@+id/file_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:name="org.twinone.util.UIView" />
</LinearLayout>